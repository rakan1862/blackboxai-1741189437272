# Application Settings
APP_NAME="UAE Compliance Platform (Testing)"
APP_ENV=testing
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_KEY=base64:testing-key-123456789

# Database Configuration
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=uae_compliance
DB_USERNAME=root
DB_PASSWORD=

# Test Configuration
TEST_BROWSER=chrome
TEST_BROWSER_HEADLESS=true
TEST_BASE_URL=http://localhost:8000

# Mail Configuration (for testing)
MAIL_DRIVER=array
MAIL_FROM_ADDRESS=test@uaecompliance.com
MAIL_FROM_NAME="UAE Compliance Platform Testing"

# Cache and Queue (for testing)
