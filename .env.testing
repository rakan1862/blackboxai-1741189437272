# Feature Flags (for testing)
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_2FA=false
ENABLE_SOCIAL_LOGIN=false
ENABLE_API=true
ENABLE_WEBHOOKS=false

# Test File Paths
TEST_DOCUMENT_PATH=/storage/test/documents
TEST_BACKUP_PATH=/storage/test/backups
TEST_LOG_PATH=/logs/test

# Test API Keys
TEST_API_KEY=test-api-key-123
TEST_API_SECRET=test-api-secret-456

# Error Reporting
LOG_CHANNEL=single
