# Application Settings
APP_NAME="UAE Compliance Platform"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://uaecompliance.com
APP_KEY=base64:your-secret-key-here

# Database Configuration
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=uae_compliance
DB_USERNAME=root
DB_PASSWORD=your-password-here

# JWT Configuration
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRY=86400

# Mail Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@uaecompliance.com
MAIL_FROM_NAME="UAE Compliance Platform"

# SMS Configuration
SMS_PROVIDER=twilio
SMS_FROM=your-phone-number
TWILIO_SID=your-twilio-sid
TWILIO_TOKEN=your-twilio-token

# Cache and Queue
CACHE_DRIVER=file
QUEUE_DRIVER=database

# API Configuration
API_DEBUG=false
API_TIMEOUT=30
RATE_LIMIT=60

# Storage Configuration
STORAGE_PATH=/storage
MAX_FILE_SIZE=10485760

# Security Configuration
SESSION_LIFETIME=3600
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=/storage/backups
BACKUP_FREQUENCY=daily
BACKUP_RETENTION=30

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# reCAPTCHA Configuration
RECAPTCHA_SITE_KEY=your-site-key
RECAPTCHA_SECRET_KEY=your-secret-key

# Payment Gateway (if needed)
STRIPE_KEY=your-stripe-key
STRIPE_SECRET=your-stripe-secret
STRIPE_WEBHOOK_SECRET=your-webhook-secret

# AWS Configuration (if needed)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_DEFAULT_REGION=me-south-1
AWS_BUCKET=your-bucket-name

# Redis Configuration (if needed)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Pusher Configuration (if needed)
PUSHER_APP_ID=your-app-id
PUSHER_APP_KEY=your-app-key
PUSHER_APP_SECRET=your-app-secret
PUSHER_APP_CLUSTER=mt1

# Error Reporting
LOG_CHANNEL=stack
LOG_LEVEL=error
LOG_PATH=/logs/error.log

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We are currently performing scheduled maintenance. Please check back soon."

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_2FA=false
ENABLE_SOCIAL_LOGIN=false
ENABLE_API=true
ENABLE_WEBHOOKS=true

# Compliance Settings
COMPLIANCE_CHECK_INTERVAL=86400
COMPLIANCE_REMINDER_DAYS="30,14,7,3,1"

# Document Settings
ALLOWED_FILE_TYPES="pdf,doc,docx,jpg,png"
DOCUMENT_STORAGE_PATH=/storage/documents

# Support Contact
SUPPORT_EMAIL=support@uaecompliance.com
SUPPORT_PHONE="+971 XX XXX XXXX"
WORKING_HOURS="9:00 AM - 6:00 PM GST"

# Social Media Links
FACEBOOK_URL=https://facebook.com/uaecompliance
TWITTER_URL=https://twitter.com/uaecompliance
LINKEDIN_URL=https://linkedin.com/company/uaecompliance
